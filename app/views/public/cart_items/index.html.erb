<h1>ショッピングカート</h1>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= "#{(cart_item.item.price*1.1).floor}" %></td>
      <td><%= form_with model: @cart_item, url: cart_items_path, method: :pacth do |f| %>
            <%= f.hidden_field :item_id, :value => cart_item.item.id %>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
            <%= f.select :amount, *[1..10] %><%= f.submit "変更", class:"btn btn-success" %>
          <% end %></td>
      <td><%= "#{(cart_item.item.price*1.1).floor*cart_item.amount}" %></td>
    </tr>
  </tbody>
  <% end %>
</table>