<div class="container">
<div class="col-9">
<div class="row">
<h4 class="table-active ml-5 mt-4 px-4">新規会員登録</h4>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>



    <div class="row mt-5">
      <div class="col-3">
        <%= f.label :名前 %>
      </div>
      <div class="col-1">（性）</div>
      <div class="col-3">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
      <div class="col-1 text-right">(名)</div>
      <div class="col-3">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
  </div>

    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :フリガナ %>
      </div>
      <div class="col-1 text-nowrap">（セイ）</div>
      <div class="col-3">
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>
      <div class="col-1 text-nowrap">（メイ）</div>
      <div class="col-3">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
  </div>


   <div class="row mt-2">
     <div class="col-4">
      <%= f.label :メールアドレス %>
     </div>
     <div class="col-8">
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>
   </div>


  <div class="row mt-2">
    <div class="col-4">
      <%= f.label :郵便番号（ハイフンなし） %>
    </div>
    <div class="col-8">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-4">
      <%= f.label :住所 %>
    </div>
    <div class="col-8">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"w-100" %>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-4">
    <%= f.label :電話番号（ハイフンなし） %>
    </div>
    <div class="col-8">
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  </div>

  <div class="row mt-2">
    <div class="col-4">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    </div>
    <div class="col-8">
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  </div>

  <div class="row mt-2">
    <div class="col-4">
    <%= f.label :パスワード（確認用） %>
    </div>
    <div class="col-8">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  </div>



  <div class="row mt-3">
    <div class="col-4"></div>
    <div class="col-8">
    <%= f.submit "新規登録", class:"btn btn-success w-25" %>
    </div>
  </div>

  </div>
  </div>
<% end %>

<%= render "public/shared/links" %>
