<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h4 class="table-active mt-4 px-3">注文情報入力</h4>
  </div>
  <div class="row mt-3">
  <h4 class="font-weight-bold">支払方法</h4>
  </div>
  <%= form_with model: @order, url: order_confirm_path, method: :post do |f| %>

   <div class="row">
     <div class="col ml-5 lead">
   <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
   <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
     </div>
   </div>

   <div class="row">
     <div class="col ml-5 lead">
       <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
       <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
     </div>
   </div>

   <div class="row mt-3">
     <h4 class="font-weight-bold">お届け先</h4>
   </div>




   <div class="row"><!--配送先登録-->
   <div class="col ml-5 lead">
     <%= f.radio_button :select_address, "0" %>
     <%= f.label :ご自身の住所 %>


   <div class="row ml-4">
     <%= "〒#{current_customer.postal_code}" %>
     <%= current_customer.address %><br>
     <%= current_customer.last_name %>
     <%= current_customer.first_name %>
     </div>
     </div>
   </div>




   <div class="row mt-4">
     <div class="col ml-5 lead">
     <%= f.radio_button :select_address, "1" %>
     <%= f.label :登録済住所から選択 %>
     </div>
   </div>
   <div class="row ml-5 pl-4">
     <div class="col">
     <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display), class:"w-100" %>
     </div>
   </div>



  <div class="row mt-4">
    <div class="col ml-5 lead">
      <%= f.radio_button :select_address, "2" %>
      <%= f.label :新しいお届け先 %>
    </div>
  </div>
   <div class="row ml-4">
     <div class="col-3 pl-5">
       <%= f.label :郵便番号（ハイフンなし） %>
     </div>
     <div class="col-7">
       <%= f.text_field :postal_code, class:"w-50" %>
      </div>
   </div>
   <div class="row ml-4 my-2">
     <div class="col-3 pl-5">
       <%= f.label :住所 %>
     </div>
     <div class="col-7">
       <%= f.text_field :address, class:"w-100" %>
     </div>
   </div>
   <div class="row ml-4">
     <div class="col-3 pl-5">
       <%= f.label :宛名 %>
     </div>
     <div class="col-7">
       <%= f.text_field :name, class:"w-50" %>
     </div>
   </div>

<div class="row mt-3">
  <div class="col-3 mx-auto">
    <%= f.submit '確認画面へ進む', class:"btn btn-primary" %>
  </div>
</div>



  <% end %>
</div>