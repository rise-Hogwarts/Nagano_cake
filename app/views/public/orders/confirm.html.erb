<h4>注文情報確認</h4>

<div class="container">
<div class="row">
<div class="col-9">
 <table class="table table-bordered">
  <thead class="table-active">
    <tr class="p-3">
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td class="align-middle"><%= image_tag cart_item.item.image, size: "50x30" %><%= cart_item.item.name %></td>
      <td class="align-middle"><%= cart_item.item.with_tax_price %></td>
      <td class="align-middle"><%= cart_item.amount %></td>
      <td class="align-middle"><%= cart_item.subtotal %></td>
      <% @total += cart_item.subtotal %>
    </tr>
  </tbody>
  <% end %>
</table>
</div>

<div class="col-3">
<table class="table table-bordered">
  <tr><td class="table-active">送料</td><td>800</td></tr>
  <tr><td class="table-active">商品合計</td><td><%= @total %></td></tr>
  <tr><td class="table-active">請求金額</td><td><%= "#{@total + 800}" %></td></tr>
</table>

</div>
</div>

<div class="row p-3">
<h4 class="mr-3">支払方法</h4>
<!--<%# if :payment_method == 0 %>-->
<!-- <p>クレジットカード</p>-->
<!--<%# elsif :payment_method == 1 %>-->
<!-- <p>銀行振込</p>-->
<!--<%# end %>-->
<%= @order.payment_method_i18n %>
</div>


<div class="row p-3">
<h4 class="mr-3">お届け先</h4>

<%= "〒#{@order.postal_code}" %>
<%= @order.address %><br>
<%= @order.name %>
</div>

<%= form_with model: @order, url: orders_path, method: :post do |f| %>
<%= f.hidden_field :postal_code, :value => @order.postal_code %>
<%= f.hidden_field :address, :value => @order.address %>
<%= f.hidden_field :name, :value => @order.name %>
<%= f.hidden_field :payment_method, :value => @order.payment_method %>
<%= f.hidden_field :postage, :value => 800 %>
<%= f.hidden_field :customer_id, :value => current_customer.id %>
<%= f.hidden_field :amount, :value => @total + 800 %>
<%= f.submit '注文を確定する', class:"btn btn-success" %>
<% end %>


</div>

