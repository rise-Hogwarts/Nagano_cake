<div class="container">
<div class="row">
  <div>注文履歴一覧</div>
</div>

<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <% @order_details.each do |order_detail| %>
    <tbody>
      <tr>
        <td><%= order_detail.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order_detail.order.address %></td>
        <td><%= order_detail.item.name %></td>
        <td><%= "#{order_detail.item.price * order_detail.quantity}円" %></td>
        <td><%= order_detail.order.order_status_i18n %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
</div>