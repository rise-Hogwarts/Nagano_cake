<div class="container">
   <div class="row pt-4 ml-5">
      <h4 class="table-active px-3">ログイン</h4>
   </div>

<div class="row pt-4 ml-5">
   <div class="table-active px-3 ml-5">会員の方はこちらからログイン</div>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="row pt-4">
      <div class="col-2"></div>
      <div class="col-2">
         <%= f.label :メールアドレス %>
      </div>
      <div class="col">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-75" %>
      </div>
   </div>

   <div class="row pt-2">
      <div class="col-2"></div>
      <div class="col-2">
         <%= f.label :パスワード %>
      </div>
      <div class="col">
         <%= f.password_field :password, autocomplete: "current-password", class:"w-75" %>
      </div>
  </div>


   <div class="row pt-5">
      <div class="col-4"></div>
      <div class="col">
         <%= f.submit "ログイン", class:"btn btn-primary px-5" %>
      </div>
   </div>
<% end %>

<%= render "public/shared/links" %>
</div>
