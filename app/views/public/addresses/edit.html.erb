<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-1"></div>
    <h4 class="table-active px-3 ml-5">配送先編集</h4>
  </div>



<%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>

<div class="row mt-5 ml-4">
  <div class="col-2">
    <%= f.label :郵便番号（ハイフンなし） %>
  </div>
  <div class="col">
    <%= f.text_field :postal_code, class:"w-25" %>
  </div>
</div>

<div class="row mt-2 ml-4">
  <div class="col-2">
    <%= f.label :住所 %>
  </div>
  <div class="col">
    <%= f.text_field :address, class:"w-50" %>
  </div>
</div>

<div class="row mt-2 ml-4">
  <div class="col-2">
    <%= f.label :宛名 %>
  </div>
  <div class="col-5">
    <%= f.text_field :name, class:"w-50" %>
  </div>

<%= f.submit "変更内容を保存", class:"btn btn-success" %>
</div>

<% end %>
</div>