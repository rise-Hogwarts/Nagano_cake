<h4>配送先編集</h4>


<div class="container">
<%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>

<div class="row">
<%= f.label :郵便番号（ハイフンなし） %>
<%= f.text_field :postal_code %>
</div>

<div class="row">
<%= f.label :住所 %>
<%= f.text_field :address %>
</div>

<div class="row">
<%= f.label :宛名 %>
<%= f.text_field :name %>

<%= f.submit "変更内容を保存", class:"btn btn-success" %>
</div>

<% end %>
</div>