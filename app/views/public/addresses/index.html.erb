<h4>配送先登録/一覧</h4>

<div class="container">
<%= form_with model: @address, url: addresses_path, method: :post do |f| %>

<div class="row">
<%= f.label :郵便番号（ハイフンなし） %>
<%= f.text_field :postal_code %>
</div>

<div class="row">
<%= f.label :住所 %>
<%= f.text_field :address %>
</div>

<div class="row">
<%= f.label :宛名 %>
<%= f.text_field :name %>
<%= f.submit "新規登録", class:"btn btn-success" %>
</div>

<% end %>
</div>


<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %><%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger" %></td>
    </tr>
  </tbody>
  <% end %>
</table>