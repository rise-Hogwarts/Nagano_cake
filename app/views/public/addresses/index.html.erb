<div class="container-fluid">
  <div class="row mt-4">
    <div class="col-1"></div>
    <h4 class="table-active px-4 ml-4">配送先登録/一覧</h4>
  </div>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>

<div class="row ml-5 mt-4">
  <div class="col-2">
    <%= f.label :郵便番号（ハイフンなし） %>
  </div>
  <div class="col">
    <%= f.text_field :postal_code, class:"w-25" %>
  </div>
</div>

<div class="row ml-5">
  <div class="col-2">
    <%= f.label :住所 %>
  </div>
  <div class="col">
    <%= f.text_field :address, class:"w-50" %>
  </div>
</div>

<div class="row ml-5">
  <div class="col-2">
    <%= f.label :宛名 %>
  </div>
  <div class="col-5">
    <%= f.text_field :name, class:"w-50" %>
  </div>
  <div class="col">
    <%= f.submit "新規登録", class:"btn btn-success btn-sm px-4" %>
  </div>
</div>

<% end %>
</div>


<div class="col-7 ml-4 mt-5">
<table class="table table-bordered">
  <thead class="table-active">
    <tr>
      <th class="col-1">郵便番号</th>
      <th class="col-3">住所</th>
      <th class="col-1">宛名</th>
      <th class="col-3"></th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td class="align-middle"><%= address.postal_code %></td>
      <td class="align-middle"><%= address.address %></td>
      <td class="align-middle"><%= address.name %></td>
      <td class="align-middle"><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success mx-4" %><%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>