<div><%= @customer.last_name %><%= @customer.first_name %>
さんの会員詳細</div>

<div class="container">
  <div class="row">
    <div class="col"><p>会員ID</p></div>
    <div class="col"><%= @customer.id %></div>
  </div>
  <div class="row">
    <div class="col"><p>氏名</p></div>
    <div class="col"><%= @customer.last_name %><%= @customer.first_name %></div>
  </div>
  <div class="row">
    <div class="col"><p>フリガナ</p></div>
    <div class="col"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></div>
  </div>
  <div class="row">
    <div class="col"><p>郵便番号</p></div>
    <div class="col"><%= @customer.postal_code %></div>
  </div>
  <div class="row">
    <div class="col"><p>住所</p></div>
    <div class="col"><%= @customer.address %></div>
  </div>
  <div class="row">
    <div class="col"><p>電話番号</p></div>
    <div class="col"><%= @customer.telephone_number %></div>
  </div>
  <div class="row">
    <div class="col"><p>メールアドレス</p></div>
    <div class="col"><%= @customer.email %></div>
  </div>
  <div class="row">
    <div class="col"><p>会員ステータス</p></div>
    <div class="col"><% if @customer.is_deleted == true %>
                       <p>退会</p>
                     <% elsif @customer.is_deleted == false %>
                       <p>有効</p>
                     <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col"></div>
    <div class="col">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary" %>
    </div>

  </div>
</div>