<div class="container">
  <div class="row">
    <h4 class="table-active ml-5 mt-4 px-4">会員一覧</h4>
  </div>

  <div class="row">
    <div class="col-9 mt-3 mx-auto">
<table class="table">
  <thead class="table-active">
    <tr>
      <th class="col-2">会員ID</th>
      <th class="col-3"><u>氏名</u></th>
      <th class="col-4">メールアドレス</th>
      <th class="col-3">ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %>
            <u class="text-dark">
              <%= customer.last_name %><%= customer.first_name %>
            </u>
          <% end %>
      </td>
      <td><%= customer.email %></td>
        <% if customer.is_deleted == true %>
          <td class="align-middle font-weight-bold text-secondary">退会</td>
        <% elsif customer.is_deleted == false %>
          <td class="align-middle font-weight-bold text-success">有効</td>
        <% end %>

    </tr>
  </tbody>
  <% end %>
</table>
    </div>
  </div>
</div>


