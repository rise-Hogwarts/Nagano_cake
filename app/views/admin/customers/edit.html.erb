<div>
  <%= @customer.last_name %><%= @customer.first_name %>
  さんの会員情報編集
</div>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="container">
    <div class="row">
      <div class="col"><p>会員ID</p></div>
      <div class="col"><%= @customer.id %></div>
    </div>

    <div class="row">
      <%= f.label :氏名 %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="row">
      <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>

    <div class="row">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code %>
    </div>

    <div class="row">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>

    <div class="row">
      <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number %>
    </div>

    <div class="row">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>
    </div>

    <div class="row">
        <%= form_with(model: @customer, local: true) do |form| %>

           <%= form.label :会員ステータス %>

            <%= form.radio_button :is_deleted, false %>
            <%= form.label :is_deleted, '有効', value: false %>

        <%= form.radio_button :is_deleted, true %>
      <%= form.label :is_deleted, '退会', value: true %>
        <% end %>
    </div>

    <%= f.submit "変更を保存", class:"btn btn-success btn-lg" %>

  </div>
<% end %>