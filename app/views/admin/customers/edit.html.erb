<div class="container">
  <div class="row">
    <h4 class="table-active px-4 mt-4"><%= @customer.last_name %><%= @customer.first_name %>
    さんの会員情報編集</h4>
  </div>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <div class="row mt-4">
      <div class="col-2"><p>会員ID</p></div>
      <div class="col"><%= @customer.id %></div>
    </div>

    <div class="row">
      <div class="col-2">
        <%= f.label :氏名 %>
      </div>
      <div class="col-2 mr-5">
        <%= f.text_field :last_name %>
      </div>
      <div class="col">
        <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-2">
        <%= f.label :フリガナ %>
      </div>
      <div class="col-2 mr-5">
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col">
        <%= f.text_field :first_name_kana %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-2">
        <%= f.label :郵便番号 %>
      </div>
      <div class="col">
        <%= f.text_field :postal_code %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-2">
        <%= f.label :住所 %>
      </div>
      <div class="col">
        <%= f.text_field :address %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-2">
        <%= f.label :電話番号 %>
      </div>
      <div class="col">
        <%= f.text_field :telephone_number %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-2">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="row mt-2">
        <%= form_with(model: @customer, local: true) do |form| %>
      <div class="col-2">
         <%= form.label :会員ステータス %>
      </div>
      <div class="col-1">
        <%= form.radio_button :is_deleted, false %>
        <%= form.label :is_deleted, '有効', value: false %>
      </div>
      <div class="col">
        <%= form.radio_button :is_deleted, true %>
        <%= form.label :is_deleted, '退会', value: true %>
      </div>
        <% end %>
    </div>

    <div class="row">
      <div class="col-2"></div>
      <div class="col">
        <%= f.submit "変更を保存", class:"btn btn-success btn-lg mt-4" %>
      </div>
    </div>

  </div>
<% end %>