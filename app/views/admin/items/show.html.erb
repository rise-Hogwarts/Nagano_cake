<h1>商品詳細</h1>
<div class="container">
<div class="row">
<div class="col">
 <p><%= image_tag @item.image, size: "200x200" %></p>
</div>


<div class="col">
<div class="row">
 <p class="">商品名</p>
 <%= @item.name %>
</div>

<div class="row">
 <p class="">商品説明</p>
 <%= @item.introduction %>
</div>

<div class="row">
 <p>ジャンル</p>
 <%= @item.genre.name %>
</div>

<div class="row">
 <p>税込価格<br/>
    (税抜価格)</p>
 <%= "#{(@item.price*1.1).round}(#{@item.price})円" %>
</div>

<div class="row">
  <p>販売ステータス</p>

  <% if @item.is_active == true %>
    <p class="lead text-success">販売中</p>
  <% elsif @item.is_active == false %>
    <p class="p-success">販売停止中</p>
  <% end %>

</div>

<%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success btn-lg w-25" %>



</div>
</div>
</div>