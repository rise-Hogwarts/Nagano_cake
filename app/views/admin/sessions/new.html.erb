<div class="container">
  <div class="row">
  <h2 class="mt-4 px-3 table-active">管理者ログイン</h2>
  </div>
</div>

<div class="container w-50">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="row">
      <div class="col-3">
    <%= f.label :メールアドレス %>
    </div>
    <div class="col-9">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    </div>
    </div>
  </div>

  <div class="field">
    <div class="row">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>
