<div class="container">
  <div class="row">
    <!--<div class="col-1"></div>-->
  <div class="ml-4"></div>
  <h4 class="mt-4 px-3 table-active">管理者ログイン</h4>
  </div>


<div class="col-9 mx-auto mt-4">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-3">
    <%= f.label :メールアドレス %>
    </div>
    <div class="col-9">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-75" %>
    </div>
    </div>

    <div class="row mt-3">
      <div class="col-3">
        <%= f.label :パスワード %>
      </div>
      <div class="col-9">
        <%= f.password_field :password, autocomplete: "current-password", class:"w-75" %>
      </div>
    </div>

  <!--<%# if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%#= f.check_box :remember_me %>-->
  <!--    <%#= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<%# end %>-->

  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="col-9">
    <%= f.submit "ログイン", class:"btn btn-primary px-5" %>
    </div>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>
</div>