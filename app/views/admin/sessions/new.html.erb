<div class="container">
  <div class="row">
      <p class="admin-login-text">
        <strong>管理者</strong>ログイン
      </p>
  </div>

   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

     <div class="col-10 mx-auto">
     <div class="row mt-5">
       <div class="col-3">
       <%= f.label :メールアドレス, class:'me-3' %>
       </div>

       <div class="col-7">
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'btn-block' %>
       </div>
     </div>



     <div class="row mt-2">
       <div class="col-3">
       <%= f.label :パスワード %>
       </div>
       <div class="col-7">
       <%= f.password_field :password, autocomplete: "current-password", class:'btn-block' %>
     </div>
     </div>



     <div class="row mt-4">
       <div class="col-6 mx-auto">
       <%= f.submit "ログイン", class:"btn btn-primary px-5" %>
       </div>
     </div>
   <% end %>



</div>