<div class="container">
  <h1>注文履歴一覧</h1>


  <div class="row">
    <table class="table table-bordered">
      <thead class="table-active">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= link_to admin_order_path(order.id) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %><% end %></td>
          <td><%= order.name %></td>
          <td></td><!--注文個数-->
          <td><%= order.order_status_i18n %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>


</div>