<div class="container">
  <div class="row">
    <h4 class="table-active px-3 mt-4">注文履歴一覧</h4>
  </div>


  <div class="row mt-3">
    <table class="table">
      <thead class="table-active">
        <tr>
          <th class="col-3">購入日時</th>
          <th class="col-3">購入者</th>
          <th class="col-3">注文個数</th>
          <th class="col-3">注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= link_to admin_order_path(order.id) do %>
            <u class="text-dark">
            <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></u>
            <% end %></td>
          <td><%= order.name %></td>
          <td><% order.order_details.each do |order_detail| %>
              <% @total += order_detail.quantity %>
              <% end %>
              <%= @total %></td><!--注文個数-->
          <td><%= order.order_status_i18n %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>

  <div class="row mt-2">
    <div class="col mx-auto">
      <%= paginate @orders %>
    </div>
  </div>


</div>