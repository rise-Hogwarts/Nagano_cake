<div class="container-flued">
  <div class="row">
    <div class="col-1"></div>
      <h4 class="table-active px-4 ml-5 mt-4">ジャンル一覧・追加</h4>
  </div>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <div class="row mt-5">
    <div class="col-1"></div>
    <div class="col-1 mr-2">
      <%= f.label :ジャンル名 %>
    </div>
    <div class="col-2 mr-3">
      <%= f.text_field :name, class:"w-100" %>
    </div>
    <div class="col-2">
      <%= f.submit '新規登録', class:"btn btn-success px-4 ml-3" %>
    </div>
  </div>
<% end %>


<div class="row mt-5">
  <div class="col-1"></div>
  <div class="col-3">
<table class="table">
  <thead>
    <tr class="table-active">
      <th class="pl-5">ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td class="col-7 align-middle"><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:'btn btn-success px-3' %></td>
    </tr>
  </tbody>
  <% end %>
</table>
  </div>
</div>
</div>