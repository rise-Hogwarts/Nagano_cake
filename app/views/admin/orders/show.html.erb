<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
    <table>
      <tr><td><strong>購入者</strong></td><td><%= @order.name %></td></tr>
      <tr><td><strong>注文日</strong></td><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
      <tr><td><strong>配送先</strong></td><td><%= @order.address %></td></tr>
      <tr><td><strong>支払方法</strong></td><td><%= @order.payment_method_i18n %></td></tr>
      <tr>
        <td><strong>
          注文ステータス
        </strong></td>
        <td><%= form_for :order, url: admin_order_path(@order.id), method: :pacth do |f| %>
              <%= f.select :order_status, [['入金待ち',0],['入金確認',1],['制作中',2],['発送準備中',3],['発送済み',4]] %>
              <% end %>
</td>
      </tr>
    </table>
  </div>
</div>