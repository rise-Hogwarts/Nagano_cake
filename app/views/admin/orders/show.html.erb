<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
    <table>
      <tr><td><strong>購入者</strong></td><td><%= @order.name %></td></tr>
      <tr><td><strong>注文日</strong></td><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
      <tr><td><strong>配送先</strong></td><td><%= @order.address %></td></tr>
      <tr><td><strong>支払方法</strong></td><td><%= @order.payment_method_i18n %></td></tr>
      <tr>
        <td><strong>
          注文ステータス
        </strong></td>
        <td><%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
              <%= f.select :order_status, Order.order_statuses.keys.map { |k| [t("enums.order.order_status.#{k}"), k] } %>
              <%= f.submit "更新", class:"btn btn-success btn-sm" %>
              <% end %>
</td>
      </tr>
    </table>
  </div>
</div>